<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        android:gravity="center">
    </TextView>

    <RadioGroup
        android:id="@+id/rGrSizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <RadioButton
            android:id="@+id/rBtnSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small | 5$"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"/>

        <RadioButton
            android:id="@+id/rBtnMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle | 10$"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"/>

        <RadioButton
            android:id="@+id/rBtnBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big | 15$"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toppings:"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        android:gravity="center"
        android:layout_marginTop="50dp">
    </TextView>

    <CheckBox
        android:id="@+id/cBoxCheese"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cheese | 2$"
        android:textSize="33sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_border"/>

    <CheckBox
        android:id="@+id/cBoxSausage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sausage | 3$"
        android:textSize="33sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border"/>

    <CheckBox
        android:id="@+id/cBoxMushrooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mushrooms | 1$"
        android:textSize="33sp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0069d9"
        android:text="Next"
        android:textSize="30sp" />
</LinearLayout>